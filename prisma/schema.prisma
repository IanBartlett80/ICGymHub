generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Club {
  id                  String               @id @default(cuid())
  name                String               @unique
  slug                String               @unique
  abn                 String?              @unique
  domain              String               @unique
  status              String               @default("PENDING_VERIFICATION")
  timezone            String               @default("Australia/Sydney")
  address             String?
  city                String?
  state               String?
  postalCode          String?
  phone               String?
  website             String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  auditLogs           AuditLog[]
  classSessions       ClassSession[]
  classTemplates      ClassTemplate[]
  clubDomains         ClubDomain[]
  services            ClubService[]
  coaches             Coach[]
  coachImportJobs     CoachImportJob[]
  emailVerifications  EmailVerification[]
  equipment           Equipment[]
  equipmentUsage      EquipmentUsage[]
  gymsports           Gymsport[]
  injuryFormTemplates InjuryFormTemplate[]
  injuryNotifications InjuryNotification[]
  injurySubmissions   InjurySubmission[]
  maintenanceLogs     MaintenanceLog[]
  maintenanceTasks    MaintenanceTask[]
  safetyIssues        SafetyIssue[]
  rosters             Roster[]
  rosterExports       RosterExport[]
  rosterSlots         RosterSlot[]
  rosterTemplates     RosterTemplate[]
  sessions            Session[]
  users               User[]
  zones               Zone[]

  @@index([status])
  @@index([domain])
}

model ClubDomain {
  id                String   @id @default(cuid())
  clubId            String
  domain            String
  verified          Boolean  @default(false)
  verificationToken String?  @unique
  createdAt         DateTime @default(now())
  club              Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, domain])
  @@index([clubId])
}

model User {
  id                        String                    @id @default(cuid())
  clubId                    String
  email                     String
  username                  String
  passwordHash              String
  fullName                  String
  role                      String                    @default("ADMIN")
  isActive                  Boolean                   @default(true)
  lastLogin                 DateTime?
  loginAttempts             Int                       @default(0)
  lockedUntil               DateTime?
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime                  @updatedAt
  auditLogs                 AuditLog[]
  generatedSessions         ClassSession[]            @relation("SessionGeneratedBy")
  emailVerifications        EmailVerification[]
  injuryNotifications       InjuryNotification[]
  assignedInjurySubmissions InjurySubmission[]        @relation("AssignedInjurySubmissions")
  injurySubmissionAudits    InjurySubmissionAudit[]
  injurySubmissionComments  InjurySubmissionComment[]
  passwordResets            PasswordReset[]
  generatedRosters          Roster[]                  @relation("RosterGeneratedBy")
  createdRosterTemplates    RosterTemplate[]          @relation("RosterTemplateCreatedBy")
  sessions                  Session[]
  club                      Club                      @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, username])
  @@unique([clubId, email])
  @@index([clubId])
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  clubId       String
  refreshToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  club         Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clubId])
  @@index([expiresAt])
}

model EmailVerification {
  id         String    @id @default(cuid())
  userId     String
  clubId     String
  email      String
  tokenHash  String    @unique
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime  @default(now())
  club       Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clubId])
  @@index([expiresAt])
}

model PasswordReset {
  id         String    @id @default(cuid())
  userId     String
  tokenHash  String    @unique
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Service {
  id           String        @id @default(cuid())
  key          String        @unique
  name         String
  description  String?
  icon         String?
  createdAt    DateTime      @default(now())
  clubServices ClubService[]
}

model ClubService {
  id        String   @id @default(cuid())
  clubId    String
  serviceId String
  enabled   Boolean  @default(true)
  plan      String   @default("basic")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  club      Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, serviceId])
  @@index([clubId])
  @@index([serviceId])
}

model AuditLog {
  id         String   @id @default(cuid())
  clubId     String
  userId     String?
  action     String
  entityType String
  entityId   String?
  changes    String?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  club       Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([userId])
  @@index([createdAt])
}

model Zone {
  id               String                @id @default(cuid())
  clubId           String
  name             String
  description      String?
  allowOverlap     Boolean               @default(false)
  active           Boolean               @default(true)
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  isFirst          Boolean               @default(false)
  rosterSlots      RosterSlot[]
  sessionsAllowed  SessionAllowedZone[]
  templatesAllowed TemplateAllowedZone[]
  equipment        Equipment[]
  club             Club                  @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, name])
  @@index([clubId])
}

model Gymsport {
  id             String          @id @default(cuid())
  clubId         String
  name           String
  isPredefined   Boolean         @default(false)
  active         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  classTemplates ClassTemplate[]
  coachGymsports CoachGymsport[]
  club           Club            @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, name])
  @@index([clubId])
}

model Coach {
  id                 String              @id @default(cuid())
  clubId             String
  name               String
  accreditationLevel String?
  membershipNumber   String?
  email              String?
  phone              String?
  importedFromCsv    Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  club               Club                @relation(fields: [clubId], references: [id], onDelete: Cascade)
  availability       CoachAvailability[]
  gymsports          CoachGymsport[]
  equipmentUsage     EquipmentUsage[]
  sessionLinks       SessionCoach[]
  templateLinks      TemplateCoach[]

  @@unique([clubId, email])
  @@index([clubId])
}

model CoachGymsport {
  id         String   @id @default(cuid())
  coachId    String
  gymsportId String
  createdAt  DateTime @default(now())
  gymsport   Gymsport @relation(fields: [gymsportId], references: [id], onDelete: Cascade)
  coach      Coach    @relation(fields: [coachId], references: [id], onDelete: Cascade)

  @@unique([coachId, gymsportId])
  @@index([coachId])
  @@index([gymsportId])
}

model CoachAvailability {
  id             String   @id @default(cuid())
  coachId        String
  dayOfWeek      String
  startTimeLocal String
  endTimeLocal   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  coach          Coach    @relation(fields: [coachId], references: [id], onDelete: Cascade)

  @@index([coachId])
  @@index([dayOfWeek])
}

model ClassTemplate {
  id                     String                @id @default(cuid())
  clubId                 String
  name                   String
  gymsportId             String?
  level                  String
  lengthMinutes          Int
  defaultRotationMinutes Int
  allowOverlap           Boolean               @default(false)
  activeDays             String
  startTimeLocal         String
  endTimeLocal           String
  notes                  String?
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  color                  String?
  sessions               ClassSession[]
  gymsport               Gymsport?             @relation(fields: [gymsportId], references: [id])
  club                   Club                  @relation(fields: [clubId], references: [id], onDelete: Cascade)
  allowedZones           TemplateAllowedZone[]
  defaultCoaches         TemplateCoach[]

  @@unique([clubId, name])
  @@index([clubId])
  @@index([gymsportId])
}

model TemplateAllowedZone {
  id         String        @id @default(cuid())
  templateId String
  zoneId     String
  zone       Zone          @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  template   ClassTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([templateId, zoneId])
}

model TemplateCoach {
  id         String        @id @default(cuid())
  templateId String
  coachId    String
  coach      Coach         @relation(fields: [coachId], references: [id], onDelete: Cascade)
  template   ClassTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([templateId, coachId])
}

model ClassSession {
  id                   String               @id @default(cuid())
  clubId               String
  templateId           String?
  date                 DateTime
  startTimeLocal       String
  endTimeLocal         String
  rotationMinutes      Int
  allowOverlap         Boolean              @default(false)
  assignedZoneSequence String
  status               String               @default("DRAFT")
  conflictFlag         Boolean              @default(false)
  generatedById        String?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  generatedBy          User?                @relation("SessionGeneratedBy", fields: [generatedById], references: [id])
  template             ClassTemplate?       @relation(fields: [templateId], references: [id])
  club                 Club                 @relation(fields: [clubId], references: [id], onDelete: Cascade)
  equipmentUsage       EquipmentUsage[]
  rosterSlots          RosterSlot[]
  allowedZones         SessionAllowedZone[]
  coaches              SessionCoach[]

  @@index([clubId])
  @@index([templateId])
  @@index([date])
}

model SessionAllowedZone {
  id        String       @id @default(cuid())
  sessionId String
  zoneId    String
  zone      Zone         @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  session   ClassSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, zoneId])
}

model SessionCoach {
  id        String       @id @default(cuid())
  sessionId String
  coachId   String
  coach     Coach        @relation(fields: [coachId], references: [id], onDelete: Cascade)
  session   ClassSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, coachId])
}

model RosterTemplate {
  id          String   @id @default(cuid())
  clubId      String
  name        String
  startDate   DateTime
  endDate     DateTime
  activeDays  String
  classConfig String
  status      String   @default("ACTIVE")
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rosters     Roster[]
  createdBy   User?    @relation("RosterTemplateCreatedBy", fields: [createdById], references: [id])
  club        Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([status])
}

model Roster {
  id            String          @id @default(cuid())
  clubId        String
  templateId    String?
  scope         String
  dayOfWeek     String?
  startDate     DateTime
  endDate       DateTime
  status        String          @default("DRAFT")
  generatedAt   DateTime?
  generatedById String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  generatedBy   User?           @relation("RosterGeneratedBy", fields: [generatedById], references: [id])
  template      RosterTemplate? @relation(fields: [templateId], references: [id], onDelete: Cascade)
  club          Club            @relation(fields: [clubId], references: [id], onDelete: Cascade)
  slots         RosterSlot[]

  @@index([clubId])
  @@index([scope])
  @@index([startDate])
}

model RosterSlot {
  id           String       @id @default(cuid())
  clubId       String
  rosterId     String
  sessionId    String
  zoneId       String
  startsAt     DateTime
  endsAt       DateTime
  conflictFlag Boolean      @default(false)
  allowOverlap Boolean      @default(false)
  createdAt    DateTime     @default(now())
  zoneOrder    Int?
  conflictType String?
  zone         Zone         @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  session      ClassSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  roster       Roster       @relation(fields: [rosterId], references: [id], onDelete: Cascade)
  club         Club         @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([rosterId])
  @@index([sessionId])
  @@index([zoneId])
  @@index([startsAt])
}

model CoachImportJob {
  id           String   @id @default(cuid())
  clubId       String
  status       String   @default("PENDING")
  totalRows    Int?
  importedRows Int?
  errorText    String?
  createdAt    DateTime @default(now())
  club         Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([status])
}

model RosterExport {
  id           String   @id @default(cuid())
  clubId       String
  exportType   String
  status       String   @default("PENDING")
  targetEmails String?
  createdAt    DateTime @default(now())
  club         Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([status])
}

model InjuryFormTemplate {
  id              String                 @id @default(cuid())
  clubId          String
  name            String
  description     String?
  isDefault       Boolean                @default(false)
  active          Boolean                @default(true)
  qrCode          String?
  publicUrl       String                 @unique
  headerColor     String?                @default("#0078d4")
  logoUrl         String?
  thankYouMessage String?                @default("Thank you for your submission. We will review this report shortly.")
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  automations     InjuryFormAutomation[]
  fields          InjuryFormField[]
  sections        InjuryFormSection[]
  club            Club                   @relation(fields: [clubId], references: [id], onDelete: Cascade)
  submissions     InjurySubmission[]

  @@index([clubId])
  @@index([active])
  @@index([publicUrl])
}

model InjuryFormSection {
  id          String             @id @default(cuid())
  templateId  String
  title       String
  description String?
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  fields      InjuryFormField[]
  template    InjuryFormTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@index([order])
}

model InjuryFormField {
  id               String                 @id @default(cuid())
  templateId       String
  sectionId        String?
  fieldType        String
  label            String
  description      String?
  placeholder      String?
  required         Boolean                @default(false)
  order            Int                    @default(0)
  options          String?
  validation       String?
  conditionalLogic String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  section          InjuryFormSection?     @relation(fields: [sectionId], references: [id])
  template         InjuryFormTemplate     @relation(fields: [templateId], references: [id], onDelete: Cascade)
  submissionData   InjurySubmissionData[]

  @@index([templateId])
  @@index([sectionId])
  @@index([order])
}

model InjurySubmission {
  id               String                    @id @default(cuid())
  templateId       String
  clubId           String
  submitterInfo    String?
  status           String                    @default("NEW")
  priority         String?
  assignedToUserId String?
  assignedAt       DateTime?
  resolvedAt       DateTime?
  retentionDate    DateTime?
  archived         Boolean                   @default(false)
  submittedAt      DateTime                  @default(now())
  updatedAt        DateTime                  @updatedAt
  notifications    InjuryNotification[]
  assignedTo       User?                     @relation("AssignedInjurySubmissions", fields: [assignedToUserId], references: [id])
  club             Club                      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  template         InjuryFormTemplate        @relation(fields: [templateId], references: [id], onDelete: Cascade)
  auditLog         InjurySubmissionAudit[]
  comments         InjurySubmissionComment[]
  data             InjurySubmissionData[]

  @@index([clubId])
  @@index([templateId])
  @@index([status])
  @@index([assignedToUserId])
  @@index([submittedAt])
  @@index([retentionDate])
}

model InjurySubmissionData {
  id           String           @id @default(cuid())
  submissionId String
  fieldId      String
  value        String
  createdAt    DateTime         @default(now())
  field        InjuryFormField  @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  submission   InjurySubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([fieldId])
}

model InjurySubmissionComment {
  id           String           @id @default(cuid())
  submissionId String
  userId       String
  comment      String
  isInternal   Boolean          @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  submission   InjurySubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([userId])
  @@index([createdAt])
}

model InjurySubmissionAudit {
  id           String           @id @default(cuid())
  submissionId String
  userId       String?
  action       String
  oldValue     String?
  newValue     String?
  metadata     String?
  createdAt    DateTime         @default(now())
  user         User?            @relation(fields: [userId], references: [id])
  submission   InjurySubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([userId])
  @@index([createdAt])
}

model InjuryFormAutomation {
  id                String             @id @default(cuid())
  templateId        String
  name              String
  description       String?
  active            Boolean            @default(true)
  order             Int                @default(0)
  triggerConditions String
  actions           String
  emailRecipients   String?
  emailSubject      String?
  emailTemplate     String?
  escalationEnabled Boolean            @default(false)
  escalationHours   Int?
  escalationActions String?
  lastExecuted      DateTime?
  executionCount    Int                @default(0)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  template          InjuryFormTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@index([active])
  @@index([order])
}

model InjuryNotification {
  id           String            @id @default(cuid())
  clubId       String
  userId       String
  submissionId String?
  type         String
  title        String
  message      String
  priority     String            @default("NORMAL")
  read         Boolean           @default(false)
  readAt       DateTime?
  actionUrl    String?
  createdAt    DateTime          @default(now())
  submission   InjurySubmission? @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  club         Club              @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

model Equipment {
  id               String            @id @default(cuid())
  clubId           String
  name             String
  category         String?
  active           Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  serialNumber     String?           @unique
  purchaseDate     DateTime?
  purchaseCost     String?
  condition        String?           @default("Good")
  location         String?
  zoneId           String?
  lastMaintenance  DateTime?
  nextMaintenance  DateTime?
  maintenanceNotes String?
  inUse            Boolean?          @default(false)
  currentClass     String?
  club             Club              @relation(fields: [clubId], references: [id], onDelete: Cascade)
  zone             Zone?             @relation(fields: [zoneId], references: [id])
  usageHistory     EquipmentUsage[]
  maintenanceLogs  MaintenanceLog[]
  safetyIssues     SafetyIssue[]
  maintenanceTasks MaintenanceTask[]

  @@index([clubId])
  @@index([active])
  @@index([zoneId])
  @@index([condition])
  @@index([category])
}

model EquipmentUsage {
  id           String        @id @default(cuid())
  clubId       String
  equipmentId  String
  sessionId    String?
  coachId      String?
  usedFrom     DateTime
  usedUntil    DateTime?
  notes        String?
  createdAt    DateTime      @default(now())
  coach        Coach?        @relation(fields: [coachId], references: [id])
  session      ClassSession? @relation(fields: [sessionId], references: [id])
  equipment    Equipment     @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  club         Club          @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([usedFrom])
  @@index([sessionId])
  @@index([equipmentId])
  @@index([clubId])
}

model MaintenanceLog {
  id              String    @id @default(cuid())
  clubId          String
  equipmentId     String
  maintenanceType String
  description     String
  performedBy     String?
  cost            String?
  performedAt     DateTime  @default(now())
  createdAt       DateTime  @default(now())
  equipment       Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  club            Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([performedAt])
  @@index([equipmentId])
  @@index([clubId])
}

model SafetyIssue {
  id              String    @id @default(cuid())
  clubId          String
  equipmentId     String
  issueType       String
  title           String
  description     String
  reportedBy      String
  reportedByEmail String?
  photos          String?
  priority        String    @default("MEDIUM")
  status          String    @default("OPEN")
  resolvedAt      DateTime?
  resolvedBy      String?
  resolutionNotes String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  equipment       Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  club            Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([equipmentId])
  @@index([status])
  @@index([priority])
  @@index([createdAt])
}

model MaintenanceTask {
  id            String    @id @default(cuid())
  clubId        String
  equipmentId   String
  taskType      String
  title         String
  description   String
  scheduledDate DateTime?
  dueDate       DateTime?
  completedDate DateTime?
  assignedTo    String?
  completedBy   String?
  priority      String    @default("MEDIUM")
  status        String    @default("PENDING")
  notes         String?
  photos        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  equipment     Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  club          Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([equipmentId])
  @@index([status])
  @@index([priority])
  @@index([dueDate])
}
